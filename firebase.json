{
  "firestore": {
    "rules": "infra/firebase/firestore.rules",
    "indexes": "infra/firebase/firestore.indexes.json"
  },
  "storage": {
    "rules": "infra/firebase/storage.rules"
  },
  "functions": {
    "source": "infra/functions"
  },
  "hosting": {
    "site": "wen-dev-noor",
    "public": "infra/firebase/web-dist",
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      "**/*.log"
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=0,must-revalidate"
          }
        ]
      }
    ]
  },
  "emulators": {
    "auth": { "port": 9099 },
    "firestore": { "port": 8080 },
    "storage": { "port": 9199 },
    "hosting": { "port": 5001 },
    "ui": { "enabled": true }
  }
}
